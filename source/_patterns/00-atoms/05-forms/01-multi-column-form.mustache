<div class="row">
    <div class="col-sm-6">
        <form class="form form-stacked">
            <fieldset>
                <legend>Legend</legend>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label>First Name</label>
                        <input type="text">
                    </div>
                    <div class="col-sm-6">
                        <label>Last Name</label>
                        <input type="text">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label>Password</label>
                        <input type="password">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label>E-Mail</label>
                        <input type="email" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label>City</label>
                        <input type="text">
                    </div>
                    <div class="col-sm-6">
                        <label>State</label>
                        <select class="pure-input-medium">
                            <option>AL</option>
                            <option>CA</option>
                            <option>IL</option>
                            <option>MD</option>
                            <option>NY</option>
                        </select>
                    </div>
                </div>

                <label class="checkbox">
                    <input type="checkbox"> I've read the terms and conditions
                </label>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>